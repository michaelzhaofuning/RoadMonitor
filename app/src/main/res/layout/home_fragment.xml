<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout" />

    <TableLayout
        android:divider="@color/colorPrimary"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:id="@+id/table_monitors"

        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TableRow
            android:divider="@color/colorPrimary"
            android:showDividers="middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@color/colorPrimaryTranslucent"
                android:padding="3dp"
                android:text="传感器类型"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:background="@color/colorPrimaryTranslucent"

                android:padding="3dp"
                android:text="数量"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/colorPrimaryTranslucent"
                android:gravity="center"


                android:padding="3dp"
                android:text="告警数量"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/colorPrimaryTranslucent"
                android:gravity="center"

                android:padding="3dp"
                android:text="运行时间(小时)"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>



    </TableLayout>

    <TableLayout
        android:divider="@color/colorPrimary"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:id="@+id/table_towers"

        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TableRow
            android:divider="@color/colorPrimary"
            android:showDividers="middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@color/colorPrimaryTranslucent"
                android:padding="3dp"
                android:text="铁塔类型"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:background="@color/colorPrimaryTranslucent"

                android:padding="3dp"
                android:text="数量"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/colorPrimaryTranslucent"
                android:gravity="center"


                android:padding="3dp"
                android:text="告警数量"
                android:textColor="@color/colorPrimaryDark" />


        </TableRow>



    </TableLayout>

   <TextView
       android:id="@+id/home_hide"
       android:gravity="center"
       android:textSize="15dp"
       android:textColor="@color/colorPrimary"
       android:visibility="gone"
       android:layout_width="match_parent"
       android:layout_height="100dp" />
    <LinearLayout
        android:id="@+id/layout_theme"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/place_rv"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_home"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:layout_height="match_parent">
        <com.tencent.tencentmap.mapsdk.map.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

        </com.tencent.tencentmap.mapsdk.map.MapView>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:clickable="true"
            android:alpha="0"
            android:id="@+id/monitor_container"
            android:layout_height="match_parent">
            <com.sxhxjy.roadmonitor.view.MonitorMapView
                android:layout_width="match_parent"
                android:id="@+id/monitor_map"
                android:adjustViewBounds="true"

                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/info"
                android:background="#3a000000"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="17sp"
                    android:layout_marginLeft="20dp"

                    android:textColor="#fff"
                    android:id="@+id/monitor_name"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="查看实时数据"
                    android:padding="7dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:id="@+id/get_chart_data"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>