<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sxhxjy.roadmonitor.ui.main.FeedBackActivity">
    <include layout="@layout/toolbar_layout"/>
    <EditText
        android:id="@+id/feedtext"
        android:hint="请输入您的反馈意见"
        android:gravity="top"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textSize="16dp"
        android:textColorHint="@color/default_text_color"
        android:background="@drawable/feed"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/feed"
        android:orientation="horizontal">
        <TextView
            android:text="联系方式:"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/E_Mail_feed"
            android:paddingLeft="5dp"
            android:textSize="16dp"
            android:background="@null"
            android:textColorHint="@color/default_text_color"
            android:hint="QQ/邮箱/手机号"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:onClick="feeds"
        android:text="提   交"
        android:layout_margin="5dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/round_rectangle_keycolor"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>
